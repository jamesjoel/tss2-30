<%- include("../header") %>

	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="section-title">	
						<h3><span class="orange-text">List Of all</span> Teachers</h3>
						<button class="btn btn-info" data-toggle="modal" data-target="#addModal">Add Teacher</button>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-8 offset-md-2">
					<table class="table table-dark table-hover table-bordered">
						<tr>
							<th>S.No.</th>
							<th>Name</th>
							<th>Salary</th>
							<th>City</th>
							<th>Gender</th>
							<th>Edit</th>
							<td>Delete</td>
						</tr>
						<% result.forEach((x, n)=>{ %>
							<tr>
								<td><%= n+1 %></td>
								<td><%= x.name %></td>
								<td><%= x.salary %></td>
								<td><%= x.city %></td>
								<td><%= x.gender %></td>
								<td><a class="btn btn-info" href="/teacher/edit/<%= x._id %>">Edit</a></td>
								<td><a class="btn btn-danger" href="/teacher/delete/<%= x._id %>">Delete</a></td>
							</tr>
						<% }) %>
					</table>
				</div>
			</div>
		</div>
	</div>


	<div id="addModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form action="/teacher" method="post">
				<div class="modal-header">
					<h3>Add New Teacher</h3>
				</div>
				<div class="modal-body">
						<div class="form-group">
							<label>Full Name</label>
							<input type="text" class="form-control" name="name"/>
						</div>
						<div class="form-group">
							<label>Salary</label>
							<input type="text" class="form-control" name="salary"/>
						</div>
						<div class="form-group">
							<label>City</label>
							<select class="form-control" name="city">
								<option>Select</option>
								<option>Indore</option>
								<option>Pune</option>
								<option>Delhi</option>
							</select>
						</div>
						<div class="form-group">
							<label>Gender</label>
							<Br />
							Male <input type="radio" name="gender" value="male"/>
							Female <input type="radio" name="gender" value="female"/>
						</div>
						<div class="form-group">
							<label>Address</label>
							<textarea class="form-control" name="address"></textarea>
						</div>
						
					</div>
					<div class="modal-foooter">
						<input type="submit" value="Add" class="btn btn-success" />
						<input type="button" value="Close" data-dismiss="modal" class="btn btn-danger" />
					</div>
				</div>
			</form>

		</div>
	</div>

	<%- include("../footer") %>