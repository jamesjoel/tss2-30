
<%- include('../header') %>
	
		
<!-- <a href="/student/demo/indore" class="btn btn-danger">Hello</a> -->
        
<div class="container" style="min-height:700px">
    <div class="row">
        <div class="col-md-12">
            <h3>List of All Employee</h3>

            <% if(result.length==0){ %>

                <div class="alert alert-warning">
                    No Data Found
                </div>


            <% }else{ %>

            

            <table class="table table-dark table-hover table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Full Name</th>
                    
                    <th>Contact</th>
                    <th>Salary</th>
                    <th>Gender</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>Download</th>
                </tr>

                <% result.forEach((x, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.full_name %></td>
                        <td><%= x.contact %></td>
                        <td><%= x.salary %></td>
                        <td><%= x.gender %></td>
                    
                        
                        
                        <td><a href="/employee/edit/<%= x._id %>" class="btn btn-warning btn-sm">Edit</a></td>
                        <td><a href="/employee/delete/<%= x._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                        <td><a href="/<%= x.filename %>" download class="btn btn-info btn-sm">Download</a></td>
                    </tr>
                <% }) %>
            </table>
            <% } %>
        </div>
    </div>

</div>



<%- include('../footer') %>