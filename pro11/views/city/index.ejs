
<%- include('../header') %>

		
	<div class="container" style="min-height: 600px;">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h3 class="text-center">All Cities List</h3>
                <ul class="pagination">
                    <li class="page-item <% if(activeClass==1){ %> disabled <% } %>">
                        <a href="/city/<%= activeClass-1 %>" class="page-link">Prev</a>
                    </li>

                    <% for(var i=1; i<=totalPages; i++){ %>
                        <li  class="page-item <% if(activeClass == i){ %> active <% } %>">
                            <a class="page-link" href="/city/<%= i %>"><%= i %></a>
                        </li>

                    <% } %>

                    <li class="page-item <% if(activeClass==totalPages){ %> disabled <% } %>">
                        <a href="/city/<%= parseInt(activeClass)+1 %>" class="page-link">Next</a>
                    </li>

                </ul>


                <br />
                <table class="table table-dark table-hover table-bordered">
                    <tr>
                        <th>S.No.</th>
                        <th>City Name</th>
                        <th>State Name</th>
                    </tr>
                    <% result.forEach((x, n)=>{ %>
                        <tr>
                            <td><%= n+sno+1 %></td>
                            <td><%= x.name %></td>
                            <td><%= x.state %></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>

		

<%- include('../footer') %>