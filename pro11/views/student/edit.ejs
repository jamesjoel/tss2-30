
<%- include('../header') %>
	
		
        
        
<div class="container" style="min-height:700px">
    <form action="/student/update/<%= info._id %>" method="post">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4 class="text-center">Update Student</h4>
            <div class="form-group">
                <label for="">Full Name</label>
                <input type="text" name="full_name" value="<%= info.full_name %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Age</label>
                <input type="text" name="age" value="<%= info.age %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Address</label>
                <textarea class="form-control" name="address"><%= info.address %></textarea>
            </div>
            <div class="form-group">
                <label for="">City</label>
                <select class="form-control" name="city">
                    <option>Select</option>
                    <% city.forEach((x)=>{ %>
                        <option <% if(info.city==x.name){ %> selected <% } %>><%= x.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="">Gender</label>
                <Br />
                Male<input type="radio" <% if(info.gender=='male'){ %> checked <% } %> name="gender" value="male">
                Female<input type="radio" <% if(info.gender=='female'){ %> checked <% } %> name="gender" value="female">
            </div>
            <div class="form-group">
                <label for="">Contact</label>
                <input type="text" value="<%= info.contact %>" class="form-control" name="contact">
            </div>
            <Br />
            <Br />
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
    </form>

</div>



<%- include('../footer') %>