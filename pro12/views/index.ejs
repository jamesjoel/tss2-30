<html>
    <head>
        <link type="text/css" rel="stylesheet" href="/css/bootstrap.css" />
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.bundle.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <!-- Brand -->
            <a class="navbar-brand" href="#">TSS</a>
          
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/contact">Contact</a>
                </li>
                
              </ul>
            </div>
          </nav>
          <div class="container mt-4">
              <form action="/search" method="post">
              <div class="row">
                  <div class="col-md-3">
                      <div class="form-group">
                          <input type="text" name="min_price" class="form-control" placeholder="Price Min"/>
                  
                          
                          
                      </div>
                  </div>
                  <div class="col-md-3">
                      <div class="form-group">
                  
                          <input type="text" name="max_price" class="form-control" placeholder="Price Max"/>
                          
                          
                      </div>
                  </div>
                  
                  <div class="col-md-3">
                      <div class="form-group">
                  
                  
                          <input type="text" name="ratting" class="form-control" placeholder="Ratting"/>
                          
                      </div>
                  </div>
                  <input type="submit" value="Search" class="btn btn-primary" />
              </div>
              </form>
          </div>
          <div class="container mt-4">
              <div class="row">
                <div class="col-md-12">
                    <table class="table table-dark table-hover table-bordered">
                        <tr>
                            <th>S.No.</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Image</th>
                        </tr>
                        <% result.forEach((x, n)=>{ %>
                            <tr>
                                <td><%= n+1 %></td>
                                <td><%= x.title %></td>
                                <td><%= x.price %></td>
                                <td><%= x.category %></td>
                                <td><img src="<%= x.image %>" height="100" width="100" /></td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
              </div>
          </div>
    </body>
</html>